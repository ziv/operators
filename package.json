{
  "name": "@xpr/operators",
  "version": "0.0.0-development",
  "description": "rxjs operators collection",
  "scripts": {
    "prebuild": "rm -rf lib",
    "build": "tsc --build tsconfig.build.json",
    "postbuild": "cp package*.json lib/.",
    "format": "eslint --fix src/**/*.ts && prettier --write src/**/*.ts",
    "lint": "eslint",
    "test": "jest",
    "coverage": "jest --ci --coverage && codecov",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ziv/operators.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Ziv Perry (@xpr)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ziv/operators/issues"
  },
  "homepage": "https://github.com/ziv/operators#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "lib"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^8.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/jest": "^27.0.3",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.14.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "codecov": "^3.8.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "mongodb": "^4.2.2",
    "prettier": "^2.5.1",
    "rxjs": "^7.4.0",
    "ts-jest": "^27.1.1",
    "tslib": "^2.3.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.3.5"
  }
}
