{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "es2019",
      "es2020",
      "esnext"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "rootDir": "src",
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019",
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "src"
  },
  "typedocOptions": {
    "entryPoints": [
      "src/mongo/index.ts",
      "src/transformers/index.ts",
      "src/validators/index.ts",
      "src/filters/index.ts"
    ]
  }
}
